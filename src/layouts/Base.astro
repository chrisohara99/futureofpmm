---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Weekly insights on AI transforming product marketing" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Future of PMM</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-bg: #0a0a0b;
      --color-surface: #141416;
      --color-border: #2a2a2e;
      --color-text: #e4e4e7;
      --color-text-muted: #71717a;
      --color-accent: #6366f1;
      --color-accent-soft: #4f46e5;
      --color-tools: #22c55e;
      --color-jobs: #f59e0b;
      --color-cases: #3b82f6;
      --color-trends: #a855f7;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, sans-serif;
      background: var(--color-bg);
      color: var(--color-text);
      line-height: 1.7;
    }
    
    .container {
      max-width: 680px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }
    
    header {
      border-bottom: 1px solid var(--color-border);
      padding-bottom: 2rem;
      margin-bottom: 3rem;
    }
    
    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--color-text);
      text-decoration: none;
    }
    
    .logo span {
      color: var(--color-accent);
    }
    
    .tagline {
      color: var(--color-text-muted);
      margin-top: 0.5rem;
      font-size: 0.95rem;
    }
    
    nav {
      margin-top: 1.5rem;
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }
    
    nav a {
      color: var(--color-text-muted);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.2s;
    }
    
    nav a:hover {
      color: var(--color-text);
    }
    
    .category-tag {
      display: inline-block;
      padding: 0.25rem 0.6rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .category-tools { background: rgba(34, 197, 94, 0.15); color: var(--color-tools); }
    .category-jobs { background: rgba(245, 158, 11, 0.15); color: var(--color-jobs); }
    .category-cases { background: rgba(59, 130, 246, 0.15); color: var(--color-cases); }
    .category-trends { background: rgba(168, 85, 247, 0.15); color: var(--color-trends); }
    
    article {
      margin-bottom: 3rem;
    }
    
    article h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    
    article h2 a {
      color: var(--color-text);
      text-decoration: none;
    }
    
    article h2 a:hover {
      color: var(--color-accent);
    }
    
    .meta {
      color: var(--color-text-muted);
      font-size: 0.85rem;
      margin-bottom: 1rem;
    }
    
    .content h3 {
      font-size: 1.1rem;
      margin: 1.5rem 0 0.75rem;
      color: var(--color-text);
    }
    
    .content p {
      margin-bottom: 1rem;
      color: var(--color-text-muted);
    }
    
    .content a {
      color: var(--color-accent);
    }
    
    .content ul, .content ol {
      margin: 1rem 0;
      padding-left: 1.5rem;
      color: var(--color-text-muted);
    }
    
    .content li {
      margin-bottom: 0.5rem;
    }
    
    .subscribe-box {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: 2rem;
      margin: 3rem 0;
      text-align: center;
    }
    
    .subscribe-box h3 {
      margin-bottom: 0.5rem;
    }
    
    .subscribe-box p {
      color: var(--color-text-muted);
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }
    
    .subscribe-box input[type="email"] {
      padding: 0.75rem 1rem;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      background: var(--color-bg);
      color: var(--color-text);
      font-size: 1rem;
      width: 100%;
      max-width: 300px;
      margin-bottom: 0.75rem;
    }
    
    .subscribe-box button {
      padding: 0.75rem 1.5rem;
      background: var(--color-accent);
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s;
    }
    
    .subscribe-box button:hover {
      background: var(--color-accent-soft);
    }
    
    footer {
      border-top: 1px solid var(--color-border);
      padding-top: 2rem;
      margin-top: 3rem;
      color: var(--color-text-muted);
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <a href="/" class="logo">Future<span>of</span>PMM</a>
      <p class="tagline">Weekly insights on AI transforming product marketing</p>
      <nav>
        <a href="/">Latest</a>
        <a href="/category/tools">ðŸ›  Tools</a>
        <a href="/category/jobs">ðŸ’¼ Jobs & Skills</a>
        <a href="/category/cases">ðŸ“Š Case Studies</a>
        <a href="/category/trends">ðŸ”® Trends</a>
        <a href="/archive">Archive</a>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <div class="subscribe-box">
      <h3>Get the weekly brief</h3>
      <p>AI insights for product marketers. Every Monday.</p>
      <form action="#" method="POST">
        <input type="email" name="email" placeholder="you@company.com" required>
        <br>
        <button type="submit">Subscribe</button>
      </form>
    </div>
    
    <footer>
      <p>&copy; 2026 Future of PMM. Curated by humans (with AI help).</p>
    </footer>
  </div>
</body>
</html>
